<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E4A99"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="MÀN HÌNH CHÍNH"
        app:titleMarginStart="25dp"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>


    <Button
        android:id="@+id/delete_image"
        android:layout_width="244dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#5A9AEF"
        android:text="Xóa ảnh"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_image"
        app:layout_constraintWidth_percent="0.9" />


    <Button
        android:id="@+id/view_image"
        android:layout_width="244dp"
        android:layout_height="70dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="#5A9AEF"
        android:drawablePadding="1dp"
        android:text="Thư viện"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/add_image"
        android:layout_width="244dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#5A9AEF"
        android:drawablePadding="1dp"
        android:text="Thêm ảnh"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_image"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/restore_image"
        android:layout_width="244dp"
        android:layout_height="70dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#5A9AEF"
        android:text="Phục hồi ảnh"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_image"
        app:layout_constraintWidth_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>
